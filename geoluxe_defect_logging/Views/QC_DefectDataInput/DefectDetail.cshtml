@using geoluxe_defect_logging.Models
@model DefectDetailModels

@*@{
        ViewBag.Title = "DefectDetail";
    }*@

<body>
    @using (Html.BeginForm("DefectDetail", "QC_DefectDataInput", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <form class="form-horizontal">
            <div class="container">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class=""  style="background-color:yellow">
                        <div class="form-group">
                            @Html.Partial("SlabDetail")
                        </div>
                    </div>

                    <div class="col-md-6">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">ระยะแกน X</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(m => m.DistX, null, new { @class = "form-control col-sm-2", @type = "text" })
                            </div>
                            <label class="col-sm-1 control-label">mm</label>

                            <label class="col-sm-2 control-label">ระยะแกน Y</label>
                            <div class="col-sm-2">
                                @Html.TextBoxFor(m => m.DistY, null, new { @class = "form-control col-sm-2", @type = "text" })
                            </div>
                            <label class="col-sm-1 control-label">mm</label>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">ประเภท Defect</label>
                            <div class="col-sm-2">
                                <div class="dropdown">
                                    <span>
                                        <select id="DefectType" name="DefectType" class="form-control">
                                            <option value=""></option>
                                            <option value="J">J</option>
                                            <option value="K">K</option>
                                            <option value="L">L</option>
                                            <option value="M">M</option>
                                            <option value="N">N</option>
                                        </select>
                                    </span>
                                </div>
                            </div>
                            <label class="col-sm-1 control-label">สถานะ</label>
                            <div action="" class="col-sm-4">
                                <input type="radio" name="Reprocess" value=true> Reprocess ได้<br>
                                <input type="radio" name="Reprocess" value=false> Reprocess ไม่ได้<br>
                            </div>
                        </div>

                        <div class="form-group" style="border:solid">
                            <label class="col-sm-2 control-label">Detail</label>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-2">

                            </div>

                            <div class="col-sm-2">
                                <button type="reset" id="reset" value="reset" class="btn btn-default" style="align-content:center">ล้างข้อมูล</button>
                            </div>

                            <div class="col-sm-2">
                                <button type="submit" id="submit" value="submit" class="btn btn-primary" style="align-content:center">เพิ่มข้อมูล</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</body>