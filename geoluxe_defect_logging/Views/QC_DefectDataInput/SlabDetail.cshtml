@using geoluxe_defect_logging.Models
@model SlabDetailModels

@*@{
        //ViewBag.Title = "Slab_Detail";
        ViewBag.Title = ViewBag.Message;

    }*@
<body>


    @using (Html.BeginForm("SlabDetail", "QC_DefectDataInput", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <form class="form-horizontal">
            <div class="container">
                <div class="col-md-6">
                    @*<div class="form-group">
                    @Html.Partial("Index")
                </div>*@

                    <div class="form-group">
                        <label class="col-md-2 control-label">Order No.</label>
                        <div class="col-md-6">
                            <input class="form-control" id="OrderNo" type="text" value="" placeholder="Auto-generated using slab id" name="OrderNo" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Mat. Type</label>
                        <div class="col-md-6">
                            <input class="form-control" id="MatType" type="text" value="" placeholder="Auto-generated using slab id" name="MatType" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Shades</label>
                        <div class="col-md-4">
                            <div class="dropdown">
                                <span>
                                    <select id="Shades" name="Shades" class="form-control">
                                        <option value="">เฉดสี</option>
                                        <option value="J">J</option>
                                        <option value="K">K</option>
                                        <option value="L">L</option>
                                        <option value="M">M</option>
                                        <option value="N">N</option>
                                    </select>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">ความกว้าง</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.SlabWidth_1, null, new { @class = "form-control", @type = "text", @placeholder = "กว้าง1" })
                            @Html.TextBoxFor(m => m.SlabWidth_2, null, new { @class = "form-control", @type = "text", @placeholder = "กว้าง2" })
                        </div>

                        <label class="col-md-2 control-label">ความยาว</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.SlabLength_1, null, new { @class = "form-control", @type = "text", @placeholder = "ยาว1" })
                            @Html.TextBoxFor(m => m.SlabLength_2, null, new { @class = "form-control", @type = "text", @placeholder = "ยาว2" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">ความหนา</label>
                        <div class="col-md-2">
                            @Html.TextBoxFor(m => m.SlabThickness_1, null, new { @class = "form-control", @type = "text", @placeholder = "หนา1" })
                            @Html.TextBoxFor(m => m.SlabThickness_2, null, new { @class = "form-control", @type = "text", @placeholder = "หนา2" })
                        </div>

                        <div class="col-md-2">
                            @Html.TextBoxFor(m => m.SlabThickness_3, null, new { @class = "form-control", @type = "text", @placeholder = "หนา3" })
                            @Html.TextBoxFor(m => m.SlabThickness_4, null, new { @class = "form-control", @type = "text", @placeholder = "หนา4" })
                        </div>

                        <div class="col-md-2">
                            @Html.TextBoxFor(m => m.SlabThickness_5, null, new { @class = "form-control", @type = "text", @placeholder = "หนา5" })
                            @Html.TextBoxFor(m => m.SlabThickness_6, null, new { @class = "form-control", @type = "text", @placeholder = "หนา6" })
                        </div>

                    </div>

                    <div class="form-group">
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-4">
                            <button type="submit" id="submit1" name="submit1" value="submit1" class="btn btn-primary" style="align-content:center">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</body>